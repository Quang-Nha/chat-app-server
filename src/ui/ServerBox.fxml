<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="5.0" style="-fx-background-radius: 8;"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ServerBoxController">
    <children>
        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" style="-fx-text-fill: green;" text="Server">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>
        <TextField fx:id="tfSearch" onKeyReleased="#handleSearch" promptText="Search" style="-fx-background-radius: 8;">
            <VBox.margin>
                <Insets left="25.0" right="25.0"/>
            </VBox.margin>
        </TextField>
        <ListView fx:id="lvClients" style="-fx-background-radius: 8;"/>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
